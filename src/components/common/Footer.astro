---
import Container from './Container.astro';
import navLinks from '../../data/navigation.json';

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/MasuRii',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/MasuRii',
    icon: 'linkedin',
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/MasuRii',
    icon: 'twitter',
  },
];
---

<footer class="border-t border-border bg-surface py-12 md:py-16">
  <Container>
    <div class="grid grid-cols-1 gap-12 md:grid-cols-4 md:gap-8">
      <!-- Brand & Info -->
      <div class="flex flex-col gap-4">
        <a href="/" class="text-2xl font-bold tracking-tighter text-primary">
          MasuRii<span class="text-accent">.</span>
        </a>
        <p class="max-w-xs text-secondary">
          Full Stack Developer & Creative Technologist building high-performance
          web experiences.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-primary">
          Quick Links
        </h3>
        <nav>
          <ul class="flex flex-col gap-2">
            {
              navLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-secondary transition-colors hover:text-accent"
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Legal -->
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-primary">
          Legal
        </h3>
        <nav>
          <ul class="flex flex-col gap-2">
            <li>
              <a
                href="/privacy"
                class="text-secondary transition-colors hover:text-accent"
              >
                Privacy Policy
              </a>
            </li>
            <li>
              <a
                href="/terms"
                class="text-secondary transition-colors hover:text-accent"
              >
                Terms of Service
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Socials -->
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-primary">
          Connect
        </h3>
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex h-10 w-10 items-center justify-center rounded-lg border border-border bg-background text-secondary transition-all hover:border-accent hover:text-accent hover:scale-110"
                aria-label={social.name}
              >
                {social.icon === 'github' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                  </svg>
                )}
                {social.icon === 'linkedin' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                    <rect x="2" y="9" width="4" height="12" />
                    <circle cx="4" cy="4" r="2" />
                  </svg>
                )}
                {social.icon === 'twitter' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
        <p class="mt-2 text-xs text-muted-foreground">
          Available for new opportunities.
        </p>
      </div>
    </div>

    <div
      class="mt-12 border-t border-border pt-8 text-center text-sm text-muted-foreground md:flex md:items-center md:justify-between md:text-left"
    >
      <p>Â© {currentYear} MasuRii. All rights reserved.</p>
      <p class="mt-2 md:mt-0">
        Built with <a
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium text-primary hover:text-accent">Astro</a
        > & <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium text-primary hover:text-accent">Tailwind CSS</a
        >.
      </p>
    </div>
  </Container>
</footer>
