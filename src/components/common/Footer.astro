---
import Container from './Container.astro';
import Icon from './Icon.astro';
import { getNavigationData, getPersonalData } from '../../lib/data';

const navLinks = getNavigationData();
const personal = getPersonalData();
const currentYear = new Date().getFullYear();

// Helper to check if a link is a placeholder
const isPlaceholderLink = (url: string): boolean => {
  if (!url) return true;
  const placeholderPatterns = [
    /^#$/,
    /^#[^/]/,
    /example\.com/i,
    /github\.com\/example\//i,
    /placeholder/i,
    /demo\.test/i,
    /^javascript:/i,
    /linkedin\.com\/in\/example/i,
    /twitter\.com\/example/i,
  ];
  return placeholderPatterns.some((pattern) => pattern.test(url));
};

// Check each social link
const socialLinks = [
  {
    name: 'GitHub',
    href: personal.socials.github,
    icon: 'github',
    isPlaceholder: isPlaceholderLink(personal.socials.github),
    linkType: 'github' as const,
  },
  {
    name: 'LinkedIn',
    href: personal.socials.linkedin,
    icon: 'linkedin',
    isPlaceholder: isPlaceholderLink(personal.socials.linkedin),
    linkType: 'generic' as const,
  },
  {
    name: 'Twitter',
    href: personal.socials.twitter,
    icon: 'twitter',
    isPlaceholder: isPlaceholderLink(personal.socials.twitter),
    linkType: 'generic' as const,
  },
];

// Legal links - these pages don't exist, so treat as placeholder
const legalLinks = [
  {
    name: 'Privacy Policy',
    href: `${import.meta.env.BASE_URL}privacy`,
    isPlaceholder: true,
    linkType: 'generic' as const,
  },
  {
    name: 'Terms of Service',
    href: `${import.meta.env.BASE_URL}terms`,
    isPlaceholder: true,
    linkType: 'generic' as const,
  },
];
---

<footer class="border-t border-border bg-surface py-12 md:py-16">
  <Container>
    <div class="grid grid-cols-1 gap-12 md:grid-cols-4 md:gap-8">
      <!-- Brand & Info -->
      <div class="flex flex-col gap-4">
        <a
          href={import.meta.env.BASE_URL}
          class="text-2xl font-bold tracking-tighter text-primary"
        >
          {personal.name}<span class="text-accent">.</span>
        </a>
        <p class="max-w-xs text-secondary">
          {personal.title} building high-performance web experiences.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-primary">
          Quick Links
        </h3>
        <nav>
          <ul class="flex flex-col gap-2">
            {
              navLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-secondary transition-colors hover:text-accent"
                  >
                    {link.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Legal -->
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-primary">
          Legal
        </h3>
        <nav>
          <ul class="flex flex-col gap-2">
            {
              legalLinks.map((link) =>
                link.isPlaceholder ? (
                  <li>
                    <button
                      data-placeholder-link
                      data-link-type={link.linkType}
                      data-link-url={link.href}
                      class="text-secondary transition-colors hover:text-accent cursor-pointer text-left"
                    >
                      {link.name}
                    </button>
                  </li>
                ) : (
                  <li>
                    <a
                      href={link.href}
                      class="text-secondary transition-colors hover:text-accent"
                    >
                      {link.name}
                    </a>
                  </li>
                )
              )
            }
          </ul>
        </nav>
      </div>

      <!-- Socials -->
      <div class="flex flex-col gap-4">
        <h3 class="text-sm font-bold uppercase tracking-wider text-primary">
          Connect
        </h3>
        <div class="flex gap-4">
          {
            socialLinks.map((social) =>
              social.isPlaceholder ? (
                <button
                  data-placeholder-link
                  data-link-type={social.linkType}
                  data-link-url={social.href}
                  class="flex h-12 w-12 items-center justify-center rounded-lg border border-border bg-background text-secondary transition-all hover:border-accent hover:text-accent hover:scale-110 cursor-pointer"
                  aria-label={`${social.name} (demo link)`}
                >
                  <Icon name={social.icon} class="h-5 w-5" />
                </button>
              ) : (
                <a
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex h-12 w-12 items-center justify-center rounded-lg border border-border bg-background text-secondary transition-all hover:border-accent hover:text-accent hover:scale-110"
                  aria-label={social.name}
                >
                  <Icon name={social.icon} class="h-5 w-5" />
                </a>
              )
            )
          }
        </div>
        <p class="mt-2 text-xs text-muted-foreground">
          Available for new opportunities.
        </p>
      </div>
    </div>

    <div
      class="mt-12 border-t border-border pt-8 text-center text-sm text-muted-foreground md:flex md:items-center md:justify-between md:text-left"
    >
      <p>Â© {currentYear} {personal.name}. All rights reserved.</p>
      <p class="mt-2 md:mt-0">
        Built with <a
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium text-primary hover:text-accent">Astro</a
        > & <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener noreferrer"
          class="font-medium text-primary hover:text-accent">Tailwind CSS</a
        >.
      </p>
    </div>
  </Container>
</footer>

<script>
  import { track } from '@vercel/analytics';

  // Handle placeholder link buttons - show "link not available" modal
  function setupPlaceholderLinks() {
    const placeholderButtons = document.querySelectorAll(
      '[data-placeholder-link]'
    );

    placeholderButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const linkType = button.getAttribute('data-link-type') as
          | 'live'
          | 'github'
          | 'generic';
        const linkUrl = button.getAttribute('data-link-url') || '';

        track('placeholder_link_click', { linkType, linkUrl });

        window.dispatchEvent(
          new CustomEvent('open-link-not-available-modal', {
            detail: { type: linkType, url: linkUrl },
          })
        );
      });
    });
  }

  // Run on initial load and after View Transitions
  setupPlaceholderLinks();
  document.addEventListener('astro:page-load', setupPlaceholderLinks);
</script>
