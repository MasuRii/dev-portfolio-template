---
import Section from '../../common/Section.astro';
import Container from '../../common/Container.astro';
import personalData from '../../../data/personal.json';

const { contact } = personalData;
---

<Section id="contact" variant="background" className="border-t border-border">
  <Container>
    <div class="max-w-4xl mx-auto text-center mb-12 lg:mb-20">
      <h2
        class="text-display font-bold tracking-tight mb-6 bg-gradient-to-r from-primary via-accent to-accent-alt bg-clip-text text-transparent"
        data-testid="contact-heading"
      >
        Get in Touch
      </h2>
      <p class="text-body text-secondary max-w-2xl mx-auto leading-relaxed">
        I'm currently {
          personalData.availability || 'open to new opportunities'
        }. Whether you have a question or just want to say hi, I'll try my best
        to get back to you!
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-start">
      {/* Left Column: Contact Info & Socials (To be implemented in Task 89) */}
      <div class="space-y-8" data-testid="contact-info">
        <div
          class="p-8 rounded-2xl border border-border bg-surface/50 backdrop-blur-sm relative overflow-hidden group"
        >
          <div
            class="absolute inset-0 bg-gradient-to-br from-accent/5 to-accent-alt/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
          >
          </div>
          <h3 class="text-h3 font-bold mb-4">Contact Information</h3>
          <p class="text-body text-secondary mb-8">
            Prefer a direct message? Feel free to reach out through any of these
            channels.
          </p>
          {/* Placeholder for Task 89 */}
          <div class="space-y-4">
            <div class="flex items-center gap-4 text-primary">
              <span class="p-3 rounded-lg bg-accent/10">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lucide lucide-mail"
                  ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
                >
              </span>
              <a
                href={`mailto:${contact.email}`}
                class="text-lg font-medium hover:text-accent transition-colors"
              >
                {contact.email}
              </a>
            </div>
          </div>
        </div>
      </div>

      {/* Right Column: Contact Form (To be implemented in Task 86) */}
      <div class="relative" data-testid="contact-form-container">
        <div
          class="absolute -inset-4 bg-gradient-to-r from-accent/20 to-accent-alt/20 blur-3xl opacity-20 -z-10"
        >
        </div>
        {/* Placeholder for ContactForm component */}
        <div class="p-8 rounded-2xl border border-border bg-surface shadow-xl">
          <p class="text-center text-secondary py-20">
            Contact form coming soon...
          </p>
        </div>
      </div>
    </div>
  </Container>
</Section>
