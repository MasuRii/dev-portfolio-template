---
import { Image } from 'astro:assets';
import Section from '../../common/Section.astro';
import Container from '../../common/Container.astro';
import { StatCounter } from './StatCounter';
import { getPersonalData, type PersonalData } from '../../../lib/data';

const info = getPersonalData();
type Stat = PersonalData['stats'][number];
---

<Section id="about" variant="surface">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-center">
      <!-- Column 1: Text Content -->
      <div class="space-y-8 animate-item">
        <div class="space-y-4">
          <h2 class="text-h2 font-bold tracking-tight">
            About <span class="text-accent">Me</span>
          </h2>
          <div class="w-20 h-1.5 bg-accent rounded-full"></div>
        </div>

        <div
          class="space-y-6 text-body text-secondary leading-relaxed max-w-prose"
        >
          {
            Array.isArray(info.bio) ? (
              info.bio.map((paragraph) => <p>{paragraph}</p>)
            ) : (
              <p>{info.bio}</p>
            )
          }
        </div>

        <!-- Stats Grid - Task 64 -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-6 pt-4 animate-item">
          {
            info.stats.map((stat: Stat) => (
              <StatCounter
                client:visible
                value={stat.value}
                label={stat.label}
                suffix={stat.suffix}
              />
            ))
          }
        </div>
      </div>

      <!-- Column 2: Image Wrapper - Task 63 -->
      <div class="relative group animate-item">
        <div
          class="relative z-10 aspect-square rounded-2xl bg-surface border border-border overflow-hidden shadow-2xl transition-transform duration-500 group-hover:scale-[1.02]"
        >
          <div
            class="absolute inset-0 bg-gradient-to-tr from-accent/20 to-accent-alt/20 z-10 mix-blend-overlay group-hover:opacity-0 transition-opacity duration-500"
          >
          </div>
          <Image
            src={info.avatar}
            alt={`Professional portrait of ${info.name}`}
            width={800}
            height={800}
            format="avif"
            widths={[400, 800]}
            sizes="(max-width: 768px) 400px, 800px"
            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
            loading="lazy"
            decoding="async"
          />
        </div>

        <!-- Decorative Background Elements -->
        <div
          class="absolute -top-4 -right-4 w-full h-full border-2 border-accent/20 rounded-2xl -z-10 transition-transform duration-500 group-hover:translate-x-2 group-hover:translate-y-2"
        >
        </div>
        <div
          class="absolute -bottom-10 -left-10 w-40 h-40 bg-accent/10 rounded-full blur-3xl -z-20 animate-pulse"
        >
        </div>
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-accent-alt/10 rounded-full blur-[100px] -z-30"
        >
        </div>
      </div>
    </div>
  </Container>
</Section>
