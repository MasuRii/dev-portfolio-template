---
import Section from '../../common/Section.astro';
import Container from '../../common/Container.astro';
import personal from '../../../data/personal.json';
---

<Section id="about" variant="surface">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-center">
      <!-- Column 1: Text Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h2 class="text-h2 font-bold tracking-tight">
            About <span class="text-accent">Me</span>
          </h2>
          <div class="w-20 h-1.5 bg-accent rounded-full"></div>
        </div>

        <div
          class="space-y-6 text-body text-secondary leading-relaxed max-w-prose"
        >
          {
            Array.isArray(personal.bio) ? (
              personal.bio.map((paragraph) => <p>{paragraph}</p>)
            ) : (
              <p>{personal.bio}</p>
            )
          }
        </div>

        <!-- Stats Placeholder - Task 64 -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-6 pt-4">
          <div class="p-4 rounded-xl bg-background border border-border">
            <div class="text-h3 font-bold text-primary">5+</div>
            <div class="text-small text-secondary">Years Exp.</div>
          </div>
          <div class="p-4 rounded-xl bg-background border border-border">
            <div class="text-h3 font-bold text-primary">50+</div>
            <div class="text-small text-secondary">Projects</div>
          </div>
          <div class="p-4 rounded-xl bg-background border border-border">
            <div class="text-h3 font-bold text-primary">10+</div>
            <div class="text-small text-secondary">Clients</div>
          </div>
        </div>
      </div>

      <!-- Column 2: Image Wrapper - Task 63 -->
      <div class="relative group">
        <div
          class="relative z-10 aspect-square rounded-2xl bg-surface border border-border overflow-hidden shadow-2xl transition-transform duration-500 group-hover:scale-[1.02]"
        >
          <div
            class="absolute inset-0 bg-gradient-to-tr from-accent/10 to-accent-alt/10"
          >
          </div>
          <div class="absolute inset-0 flex items-center justify-center">
            <span class="text-muted font-mono uppercase tracking-widest"
              >Profile Image</span
            >
          </div>
        </div>

        <!-- Decorative Background Elements -->
        <div
          class="absolute -top-4 -right-4 w-full h-full border-2 border-accent/20 rounded-2xl -z-10 transition-transform duration-500 group-hover:translate-x-2 group-hover:translate-y-2"
        >
        </div>
        <div
          class="absolute -bottom-10 -left-10 w-40 h-40 bg-accent/5 rounded-full blur-3xl -z-20"
        >
        </div>
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-accent-alt/5 rounded-full blur-[100px] -z-30"
        >
        </div>
      </div>
    </div>
  </Container>
</Section>
