---
import RootLayout from '../layouts/RootLayout.astro';
import MainLayout from '../layouts/MainLayout.astro';
---

<RootLayout title="MasuRii | Full Stack Developer & Creative Technologist">
  <MainLayout>
    <main class="flex min-h-[80vh] flex-col items-center justify-center py-24">
      <h1
        class="bg-linear-to-r from-accent to-accent-alt bg-clip-text text-6xl font-bold text-transparent md:text-8xl"
      >
        MasuRii
      </h1>
      <p class="mt-6 text-xl text-secondary md:text-2xl">
        Full Stack Developer & Creative Technologist
      </p>
      <div class="mt-10 flex flex-wrap gap-4">
        <a
          href="#projects"
          class="rounded-lg bg-accent px-8 py-4 font-medium text-white transition-transform active:scale-95"
        >
          View Projects
        </a>
        <a
          href="#contact"
          class="rounded-lg border border-border px-8 py-4 font-medium text-primary transition-colors hover:bg-surface"
        >
          Contact Me
        </a>
      </div>
    </main>
  </MainLayout>
</RootLayout>
