---
import RootLayout from '../layouts/RootLayout.astro';
import MainLayout from '../layouts/MainLayout.astro';
import { Hero, About, Skills } from '../components';
---

<RootLayout title="MasuRii | Full Stack Developer & Creative Technologist">
  <MainLayout>
    <Hero />
    <About />
    <Skills />

    <section
      id="projects"
      class="flex min-h-screen flex-col items-center justify-center py-24"
    >
      <h2 class="text-4xl font-bold text-primary md:text-6xl">Projects</h2>
      <div class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {/* Project placeholders will go here */}
      </div>
    </section>

    <section
      id="experience"
      class="flex min-h-screen flex-col items-center justify-center py-24"
    >
      <h2 class="text-4xl font-bold text-primary md:text-6xl">Experience</h2>
    </section>

    <section
      id="contact"
      class="flex min-h-screen flex-col items-center justify-center bg-surface py-24"
    >
      <h2 class="text-4xl font-bold text-primary md:text-6xl">Contact</h2>
    </section>
  </MainLayout>
</RootLayout>
